</div>
</Layout>
<script>
  const logo = document.getElementById("tilting-logo");

  document.addEventListener("mousemove", (e) => {
    const { innerWidth, innerHeight } = window;
    const centerX = innerWidth / 2;
    const centerY = innerHeight / 2;

    // Increased tilt intensity by reducing divisor from 60 â†’ 30
    const rotateX = (e.clientY - centerY) / 30;
    const rotateY = (e.clientX - centerX) / 30;

    if (logo) {
      logo.style.transform = `rotateX(${ -rotateX }deg) rotateY(${ rotateY }deg)`;
    }
  });

  document.addEventListener("mouseleave", () => {
    if (logo) {
      logo.style.transform = `rotateX(0deg) rotateY(0deg)`;
    }
  });
</script>

